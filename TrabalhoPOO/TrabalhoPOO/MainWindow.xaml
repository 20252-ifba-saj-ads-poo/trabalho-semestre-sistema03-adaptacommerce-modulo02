<Window x:Class="TrabalhoPOO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestão de Cadastros"
        Height="650"
        Width="900"
        Background="#F4F6F8">

    <Grid Margin="20">

        <TabControl FontSize="14">

            <!-- Fornecedor -->
            <TabItem Header="Cadastro de Fornecedor">
                <ScrollViewer>
                    <StackPanel Margin="20">

                        <!-- Card do fornecedor -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20"
                                BorderBrush="#DDD"
                                BorderThickness="1">

                            <StackPanel>

                                <TextBlock Text="Dados do Fornecedor"
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,20"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Nome:" Grid.Row="0"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Height="32"/>

                                    <TextBlock Text="CNPJ:" Grid.Row="1"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Height="32"/>

                                    <TextBlock Text="Inscrição Estadual:" Grid.Row="2"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Height="32"/>

                                    <TextBlock Text="CEP:" Grid.Row="3"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Height="32"/>

                                    <TextBlock Text="Logradouro:" Grid.Row="4"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" Height="32"/>

                                    <TextBlock Text="Bairro:" Grid.Row="5"/>
                                    <TextBox Grid.Row="5" Grid.Column="1" Height="32"/>

                                    <TextBlock Text="Cidade:" Grid.Row="6"/>
                                    <TextBox Grid.Row="6" Grid.Column="1" Height="32"/>

                                    <TextBlock Text="Estado:" Grid.Row="7"/>
                                    <TextBox Grid.Row="7" Grid.Column="1" Height="32"/>
                                </Grid>

                                <!-- Botões -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,30,0,0">

                                    <Button Content="Salvar"
                                            Width="120"
                                            Height="36"
                                            Margin="5"
                                            Background="Blue"
                                            Foreground="White"/>

                                    <Button Content="Limpar"
                                            Width="120"
                                            Height="36"
                                            Margin="5"/>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Cliente-->
            <TabItem Header="Cadastro de Cliente">
                <ScrollViewer>
                    <StackPanel Margin="20">

                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20"
                                BorderBrush="#DDD"
                                BorderThickness="1">

                            <StackPanel>

                                <TextBlock Text="Dados do Cliente"
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,20"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="22"/>
                                        <ColumnDefinition Width="158"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Tipo de Cliente:" Grid.ColumnSpan="2"/>

                                    <TextBlock Text="Nome / Razão Social:" Grid.Row="1" Grid.ColumnSpan="2"/>
                                    <TextBox Grid.Row="1" Grid.Column="2" Height="32"/>

                                    <TextBlock Text="CPF / CNPJ:" Grid.Row="2" Grid.ColumnSpan="2"/>
                                    <TextBox Grid.Row="2" Grid.Column="2" Height="32"/>

                                    <TextBlock Text="Documento Alternativo:" Grid.Row="3" Grid.ColumnSpan="2"/>
                                    <TextBox Grid.Row="3" Grid.Column="2"
                                             Height="32"
                                             IsEnabled="False"
                                             Opacity="0.6"/>
                                </Grid>

                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Consulta de fornecedor -->
            <TabItem Header="Consulta de Fornecedor">
                <Grid Margin="20">

                    <Border Background="White"
                            CornerRadius="8"
                            Padding="20"
                            BorderBrush="#DDD"
                            BorderThickness="1">

                        <StackPanel>

                            <TextBlock Text="Fornecedores Cadastrados"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,20"/>

                            <DataGrid Height="350"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nome"/>
                                    <DataGridTextColumn Header="CNPJ"/>
                                    <DataGridTextColumn Header="Cidade"/>
                                    <DataGridTextColumn Header="Estado"/>
                                    <DataGridTextColumn Header="Pedidos em Aberto"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>