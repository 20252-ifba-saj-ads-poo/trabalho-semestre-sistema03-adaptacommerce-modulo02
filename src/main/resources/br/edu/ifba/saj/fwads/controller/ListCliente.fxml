<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.fwads.controller.ListClienteController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnNovo" mnemonicParsing="false" onAction="#handleNovoCliente" text="Novo Cliente" />
                  <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#handleEditarCliente" text="Editar" />
                  <Button fx:id="btnApagar" mnemonicParsing="false" onAction="#handleApagarCliente" text="Apagar" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="txtPesquisa" promptText="Pesquisar..." HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="cbFiltro" prefWidth="150.0" promptText="Filtrar por" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="tabelaClientes" prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="colTipo" prefWidth="100.0" text="Tipo" />
          <TableColumn fx:id="colNome" prefWidth="250.0" text="Nome" />
          <TableColumn fx:id="colDocumento" prefWidth="150.0" text="CPF/CNPJ" />
            <TableColumn fx:id="colEmail" prefWidth="180.0" text="E-mail" />
            <TableColumn fx:id="colCidadeUf" prefWidth="120.0" text="Cidade/UF" />
        </columns>
      </TableView>
   </center>
</BorderPane>